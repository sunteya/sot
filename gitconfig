[alias]
	co = checkout
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[color]
	ui = auto

[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	quotepath = false

[apply]
	whitespace = nowarn

[format]
	pretty = %C(yellow)%h%Creset -%C(red)%d%Creset %s %C(green)(%cr)%Creset by %C(blue)%an%Creset

[push]
	default = simple

[difftool]
	prompt = false

[include]
	path = ~/.gitconfig.local
[fetch]
	prune = false
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
